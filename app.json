{
  "id": "com.plugwise.adam",
  "version": "1.0.0",
  "compatibility": ">=2.0.0",
  "brandColor": "#3CA2D7",
  "sdk": 2,
  "name": {
    "en": "Plugwise Adam"
  },
  "description": {
    "en": "Adds support for Plugwise Adam"
  },
  "category": [
    "climate"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Athom B.V.",
    "email": "support@athom.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Ted Tolboom"
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Lisa"
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "measure_battery"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "min": 0,
          "max": 99.5,
          "step": 0.5
        }
      },
      "images": {
        "large": "{{driverPathAssets}}/images/large.png",
        "small": "{{driverPathAssets}}/images/small.png"
      },
      "pair": [
        {
          "id": "list_bridges",
          "template": "list_devices",
          "options": {
            "singular": true
          },
          "navigation": {
            "next": "loading"
          }
        },
        {
          "id": "loading",
          "template": "loading"
        },
        {
          "id": "pincode",
          "template": "pincode",
          "options": {
            "type": "text",
            "length": 8,
            "title": {
              "en": "Enter password"
            },
            "hint": {
              "en": "Enter the Adam's password. You can find this on the back of the device."
            }
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "lisa"
    },
    {
      "name": {
        "en": "Plug"
      },
      "class": "socket",
      "capabilities": [
        "onoff",
        "measure_power",
        "meter_power"
      ],
      "images": {
        "large": "{{driverPathAssets}}/images/large.png",
        "small": "{{driverPathAssets}}/images/small.png"
      },
      "pair": [
        {
          "id": "list_bridges",
          "template": "list_devices",
          "options": {
            "singular": true
          },
          "navigation": {
            "next": "loading"
          }
        },
        {
          "id": "loading",
          "template": "loading"
        },
        {
          "id": "pincode",
          "template": "pincode",
          "options": {
            "type": "text",
            "length": 8,
            "title": {
              "en": "Enter password"
            },
            "hint": {
              "en": "Enter the Adam's password. You can find this on the back of the device."
            }
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "plug"
    },
    {
      "name": {
        "en": "Floor & Tom"
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "valve_position",
        "measure_battery"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "min": 0,
          "max": 99.5,
          "step": 0.5
        }
      },
      "images": {
        "large": "{{driverPathAssets}}/images/large.png",
        "small": "{{driverPathAssets}}/images/small.png"
      },
      "pair": [
        {
          "id": "list_bridges",
          "template": "list_devices",
          "options": {
            "singular": true
          },
          "navigation": {
            "next": "loading"
          }
        },
        {
          "id": "loading",
          "template": "loading"
        },
        {
          "id": "pincode",
          "template": "pincode",
          "options": {
            "type": "text",
            "length": 8,
            "title": {
              "en": "Enter password"
            },
            "hint": {
              "en": "Enter the Adam's password. You can find this on the back of the device."
            }
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "valve"
    },
    {
      "name": {
        "en": "Zone",
        "nl": "Zone"
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "measure_power",
        "location_preset"
      ],
      "images": {
        "large": "{{driverPathAssets}}/images/large.png",
        "small": "{{driverPathAssets}}/images/small.png"
      },
      "pair": [
        {
          "id": "list_bridges",
          "template": "list_devices",
          "options": {
            "singular": true
          },
          "navigation": {
            "next": "loading"
          }
        },
        {
          "id": "loading",
          "template": "loading"
        },
        {
          "id": "pincode",
          "template": "pincode",
          "options": {
            "type": "text",
            "length": 8,
            "title": {
              "en": "Enter password"
            },
            "hint": {
              "en": "Enter the Adam's password. You can find this on the back of the device."
            }
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "zone"
    }
  ],
  "capabilities": {
    "location_preset": {
      "title": {
        "en": "Preset"
      },
      "uiComponent": "picker",
      "getable": true,
      "setable": true,
      "type": "enum",
      "values": [
        {
          "id": "home",
          "title": {
            "en": "Home",
            "nl": "Thuis"
          }
        },
        {
          "id": "away",
          "title": {
            "en": "Away",
            "nl": "Weg"
          }
        },
        {
          "id": "asleep",
          "title": {
            "en": "Night",
            "nl": "Nacht"
          }
        },
        {
          "id": "vacation",
          "title": {
            "en": "Vacation",
            "nl": "Vakantie"
          }
        },
        {
          "id": "no_frost",
          "title": {
            "en": "Frost protection",
            "nl": "Anti-vries"
          }
        }
      ]
    },
    "valve_position": {
      "type": "number",
      "title": {
        "en": "Valve position",
        "nl": "Radiator positie"
      },
      "min": 0,
      "max": 100,
      "units": "%",
      "getable": true,
      "setable": false,
      "insights": false,
      "uiComponent": "sensor"
    }
  }
}